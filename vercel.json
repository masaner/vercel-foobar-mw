{
    "version": 2,
    "rewrites": [{ "source": "/(.*)", "destination": "/api" }],
    "routes": [
        {
            "src": "/",
            "headers": { "cache-control": "no-cache, no-store, must-revalidate", "Access-Control-Allow-Origin": "*" },
            "dest": "/api"
        },
        {
            "src": "/leads",
            "headers": { "cache-control": "no-cache, no-store, must-revalidate", "Access-Control-Allow-Origin": "*" },
            "dest": "/api/leads"
        },
        {
            "src": "/retrieve",
            "headers": { "cache-control": "no-cache, no-store, must-revalidate", "Access-Control-Allow-Origin": "*" },
            "dest": "/api/retrieve"
        },
        {
            "src": "/salesforce",
            "headers": { "cache-control": "no-cache, no-store, must-revalidate", "Access-Control-Allow-Origin": "*" },
            "dest": "/api/salesforce"
        }
    ]
}